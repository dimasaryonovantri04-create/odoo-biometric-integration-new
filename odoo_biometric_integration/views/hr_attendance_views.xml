<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_view_form_inherit_biometric" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit.biometric</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Biometric Raw Data" name="biometric_info" attrs="{'invisible': [('biometric_data_ids', '=', [])]}">
                        <field name="biometric_data_ids"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
